        <mapping class="main.java.com.senebien.models.Bien"/>
        <mapping class="main.java.com.senebien.models.TypeBailleur"/>
        <mapping class="main.java.com.senebien.models.Bailleur"/>
        <mapping class="main.java.com.senebien.models.TypeBien"/>
        <mapping class="main.java.com.senebien.models.Client"/>
        <mapping class="main.java.com.senebien.models.Location"/>
        <mapping class="main.java.com.senebien.models.Loyer"/>
        <!-- end Mapping Models java to DB entities -->
    </session-factory>
</hibernate-configuration>
